
// { Driver Code Starts
#include <bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
class Solution {
  public:
    vector<int> cppOperators(int A, int B) {
        // code here
        int sum = A+B; 
        int mul = A*B;
        int div,sub;  
        if (B>A){
            div = B/A;
            sub = B-A; 
        }
        else{
            div = A/B;
            sub = A-B; 
        }
        return {sum, mul, sub, div}; 
            
        }
    };

// { Driver Code Starts.
int main() {
    int t;
    cin >> t;
    while (t--) {
        int A, B;
        cin >> A >> B;
        Solution ob;
        vector<int> ans = ob.cppOperators(A, B);
        for (int u : ans) cout << u << "\n";
    }
}  // } Driver Code Ends
